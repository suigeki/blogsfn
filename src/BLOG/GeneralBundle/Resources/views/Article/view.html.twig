{# src/BLOG/GeneralBundle/Resources/views/Article/view.html.twig #}

{# Mise en place du template fils #}

{# Référence au template père  src/BLOG/GeneralBundle/Resources/views/Templatesmasters #}
{% extends "BLOGGeneralBundle:Templatesmasters:layout.html.twig" %}

{# Affichage le lien d'accès du fichier #}
{% block urlfile %}
    src/BLOG/GeneralBundle/Resources/views/Article/view.html.twig
{% endblock %}

{# parent() appelle le contenu du block du template père #}
{% block title %}
    Lecture d'une annonce - {{ parent() }}
{% endblock %}

{# On envoi le contenu au block body du template père #}
{% block bloggeneral_body %}
    <h2>Annonce : {{ annonce.title }} ({{ annonce.id }})</h2>
    <p>
        <a href="{{ path('blog_general_annonceindex') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste des annonces
        </a>
        <a href="{{ path('blog_general_articleedit', {'id': article.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-edit"></i>
            Modifier l'annonce
        </a>
        <a href="{{ path('blog_general_articledelete', {'id': article.id}) }}" class="btn btn-danger">
            <i class="glyphicon glyphicon-trash"></i>
            Supprimer l'annonce
        </a>
    </p>
{% endblock %}
